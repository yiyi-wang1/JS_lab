<%- include ('./partial/header.ejs') %>
    <form action="/car_status">
        <label for="year">Please enter the year of your car</label>
        <!-- <input type="text" id="year" name="year"> -->
        <select name="year" id="year">
            <% for(let i=2025; i>= 1950; i--){%>
                <option value="<%-i%>">
                    <%- i %>
                </option>
                <% }%>
        </select>
        <input type="submit" value="Submit">
    </form>
    <div>
        <% if(result) { %>
            <h1>Please see the below for your car status:</h1>
            <h1>
                <%- result %>
            </h1>
            <% } %>
    </div>
    <%- include ('./partial/footer.ejs') %>