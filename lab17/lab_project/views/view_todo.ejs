<%- include('./partials/header.ejs') %>

    <% if(todos){ %>
        <ul>
            <% todos.forEach(x=> { %>
                <li>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%- x.title %>
                            </h5>
                            <p class="card-text">
                                <%- x.body %>
                            </p>
                        </div>
                    </div>
                </li>
                <%}) %>

        </ul>
        <%} %>
            <%- include('./partials/footer.ejs') %>