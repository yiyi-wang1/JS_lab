<%- include('../partials/header.ejs') %>

    <div class="d-flex flex-row justify-content-around mt-3">
        <!-- left part  -->
        <div>
            <% if (contact) { %>
                <form action="/contacts/<%- contact.id %> " method="post">
                    <input type="hidden" name="_method" value="patch">
                    <% } %>
                        <form action="/contacts" method="post">
                            <div class="mb-3 row">
                                <label for="contactName" class="form-label">Name</label>
                                <input type="text" class="form-control" id="contactName" name="contactName"
                                    value="<%= contact? contact.name:'' %>">
                            </div>
                            <div class="mb-3 row">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address"
                                    value="<%= contact? contact.address:'' %>">
                            </div>

                            <div class="d-flex flex-row justify-content-between mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="department"
                                        id="flexRadioDefault1" <%=contact.department==='Sales' ? 'checked' :''%>
                                    value="Sales">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Sales
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="department"
                                        id="flexRadioDefault2" <%=contact.department==='Marketing' ? 'checked' :''%>
                                    value="Marketing">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Marketing
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="department"
                                        id="flexRadioDefault2" <%=contact.department==='Technical' ? 'checked' :''%>
                                    value="Technical">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Technical
                                    </label>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="message" class="form-label">Message</label>
                                <textarea name="message"><%= contact? contact.message:'' %></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
        </div>

        <!-- right part -->
        <div style="max-width: 600px;">
            <div class="mb-5">
                <h4>Marketing</h4>
                <table class="table table-striped table-sm align-middle"
                    style="word-break:break-all; word-wrap:break-all;">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Message</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-wrap">
                        <% for(let contact of marketing) {%>
                            <tr>
                                <td style="min-width: 110px;">
                                    <%- contact.name %>
                                </td>
                                <td style="word-wrap: break-word">
                                    <%- contact.address %>
                                </td>
                                <td style="word-wrap: break-word">
                                    <%- contact.message %>
                                </td>
                                <td style="min-width: 110px;">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <a href="/contacts/<%- contact.id %>/edit">Edit</a>
                                        <form action="/contacts/<%- contact.id %>" method="post">
                                            <input type="hidden" name="_method" value="delete">
                                            <button type="submit" class="btn btn-link px-0 py-0">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
            <div class="mb-5">
                <h4>Sales</h4>
                <table class="table table-striped table-sm align-middle"
                    style="word-break:break-all; word-wrap:break-all;">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Message</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-wrap">
                        <% for(let contact of sales) {%>
                            <tr>
                                <td style="min-width: 110px;">
                                    <%- contact.name %>
                                </td>
                                <td style="word-wrap: break-word">
                                    <%- contact.address %>
                                </td>
                                <td style="word-wrap: break-word;">
                                    <%- contact.message %>
                                </td>
                                <td style="min-width: 110px;">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <a href="/contacts/<%- contact.id %>/edit">Edit</a>
                                        <form action="/contacts/<%- contact.id %>" method="post">
                                            <input type="hidden" name="_method" value="delete">
                                            <button type="submit" class="btn btn-link px-0 py-0">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
            <div class="mb-5">
                <h4>Technical</h4>
                <table class="table table-striped table-sm align-middle"
                    style="word-break:break-all; word-wrap:break-all;">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Message</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let contact of technical) {%>
                            <tr>
                                <td style="min-width: 110px;">
                                    <%- contact.name %>
                                </td>
                                <td style="word-wrap: break-word">
                                    <%- contact.address %>
                                </td>
                                <td style="word-wrap: break-word">
                                    <%- contact.message %>
                                </td>
                                <td style="min-width: 110px;">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <a href="/contacts/<%- contact.id %>/edit">Edit</a>
                                        <form action="/contacts/<%- contact.id %>" method="post">
                                            <input type="hidden" name="_method" value="delete">
                                            <button type="submit" class="btn btn-link px-0 py-0">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>